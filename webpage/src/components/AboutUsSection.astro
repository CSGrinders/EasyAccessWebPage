---
const { title, content, team } = Astro.props
---

<section id="about" class="about-section py-20">
  <div class="bs-container">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="section-title mb-6" set:html={title} />
      <div class="section-description" set:html={content} />
    </div>

    <!-- us Grid -->
    <div class="team-grid">
      {team.map((member) => (
        <div class="team-card">
          <div class="card-content">
            <div class="member-avatar">
              {member.image ? (
                <img src={member.image} alt={member.name} class="avatar-image" />
              ) : (
                <div class="avatar-placeholder">
                  {member.name.split(' ').map(n => n[0]).join('')}
                </div>
              )}
            </div>
            <div class="member-info">
              <h3 class="member-name">{member.name}</h3>
              <p class="member-role">{member.role}</p>
              <p class="member-description">{member.description}</p>
              {member.linkedin && (
                <a href={member.linkedin} class="linkedin-link" target="_blank" rel="noopener noreferrer">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  Connect
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Mission Statement -->
    <div class="mission-statement">
      <div class="mission-content">
        <h3 class="mission-title">Our Mission</h3>
        <p class="mission-text">
          We believe file management shouldn't be a chore. EasyAccess was born from the frustration of 
          juggling multiple cloud services and the dream of a unified, intelligent file system that works 
          the way you think.
        </p>
      </div>
    </div>

  </div>
</section>

<style>
.about-section {
  position: relative;
  overflow: hidden;
}

.about-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at 20% 50%, 
    color-mix(in hsl, hsl(var(--accent)), transparent 90%) 0%, 
    transparent 50%
  );
  pointer-events: none;
}

.section-title {
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  font-weight: 700;
  color: hsl(var(--foreground));
  margin: 0;
  position: relative;
}

.section-description {
  font-size: 1.125rem;
  color: hsl(var(--foreground) / 0.8);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.team-card {
  background: color-mix(in hsl, hsl(var(--background)), transparent 20%);
  backdrop-filter: blur(10px);
  border: 1px solid color-mix(in hsl, hsl(var(--border)), transparent 50%);
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
}

.team-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, hsl(var(--accent)), hsl(var(--accent) / 0.5));
}

.team-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px color-mix(in hsl, hsl(var(--foreground)), transparent 90%);
  border-color: hsl(var(--accent) / 0.3);
}

.card-content {
  padding: 2rem;
  text-align: center;
}

.member-avatar {
  margin-bottom: 1.5rem;
}

.avatar-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, hsl(var(--accent)), hsl(var(--accent) / 0.7));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  font-weight: 700;
  color: hsl(var(--accent-foreground));
  margin: 0 auto;
  box-shadow: 0 8px 25px color-mix(in hsl, hsl(var(--accent)), transparent 70%);
}

.avatar-image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
  margin: 0 auto;
  box-shadow: 0 8px 25px color-mix(in hsl, hsl(var(--accent)), transparent 70%);
  border: 3px solid color-mix(in hsl, hsl(var(--accent)), transparent 50%);
}

.member-name {
  font-size: 1.25rem;
  font-weight: 600;
  color: hsl(var(--foreground));
  margin: 0 0 0.5rem 0;
}

.member-role {
  font-size: 0.9rem;
  color: hsl(var(--accent));
  font-weight: 500;
  margin: 0 0 1rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.member-description {
  color: hsl(var(--foreground) / 0.8);
  line-height: 1.6;
  margin: 0 0 1.5rem 0;
}

.linkedin-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: hsl(var(--accent));
  color: hsl(var(--accent-foreground));
  text-decoration: none;
  border-radius: 2rem;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.linkedin-link:hover {
  background: hsl(var(--accent) / 0.9);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px color-mix(in hsl, hsl(var(--accent)), transparent 70%);
}

.mission-statement {
  background: color-mix(in hsl, hsl(var(--background)), transparent 30%);
  backdrop-filter: blur(15px);
  border: 1px solid color-mix(in hsl, hsl(var(--border)), transparent 50%);
  border-radius: 1.5rem;
  padding: 3rem;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.mission-statement::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent,
    color-mix(in hsl, hsl(var(--accent)), transparent 95%),
    transparent
  );
  animation: rotate 20s linear infinite;
  pointer-events: none;
}

.mission-content {
  position: relative;
  z-index: 1;
}

.mission-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: hsl(var(--foreground));
  margin: 0 0 1rem 0;
}

.mission-text {
  font-size: 1.125rem;
  color: hsl(var(--foreground) / 0.8);
  line-height: 1.7;
  max-width: 800px;
  margin: 0 auto;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .team-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .mission-statement {
    padding: 2rem;
  }
  
  .card-content {
    padding: 1.5rem;
  }
}
</style>
