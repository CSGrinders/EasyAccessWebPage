<style>

.contact-modal {
  position: fixed;
  inset: 0;
  margin: auto;
  z-index: 50;
  border: none;
  background: transparent;
  max-width: 500px;
  width: calc(100% - 2rem);
  max-height: calc(100vh - 2rem);
  border-radius: 1.5rem;
  padding: 0;
  overflow: hidden;
}

.contact-card {
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--background)), transparent 5%) 0%,
    color-mix(in hsl, hsl(var(--background)), hsl(var(--primary)) 8%) 100%
  );
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border: 1px solid color-mix(in hsl, hsl(var(--border)), hsl(var(--primary)) 30%);
  border-radius: 1.5rem;
  padding: 2rem;
  box-shadow: 
    0 20px 60px color-mix(in hsl, hsl(var(--background)), black 40%),
    0 8px 32px color-mix(in hsl, hsl(var(--primary)), transparent 80%),
    inset 0 1px 0 color-mix(in hsl, white, transparent 85%);
}

.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.contact-title {
  font-size: 1.875rem;
  font-weight: 700;
  background: linear-gradient(135deg, 
    hsl(var(--foreground)) 0%,
    color-mix(in hsl, hsl(var(--foreground)), hsl(var(--primary)) 30%) 100%
  );
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  margin: 0;
}

.contact-close {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--primary)), transparent 80%) 0%,
    color-mix(in hsl, hsl(var(--primary)), transparent 60%) 100%
  );
  border: 1px solid color-mix(in hsl, hsl(var(--primary)), transparent 60%);
  color: hsl(var(--foreground));
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all .3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.contact-close:hover {
  transform: translateY(-1px);
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--primary)), transparent 65%) 0%,
    color-mix(in hsl, hsl(var(--primary)), transparent 50%) 100%
  );
  box-shadow: 0 4px 12px color-mix(in hsl, hsl(var(--primary)), transparent 75%);
}

.contact-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-message {
  text-align: center;
  padding: 1rem;
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--primary)), transparent 95%) 0%,
    color-mix(in hsl, hsl(var(--primary)), transparent 85%) 100%
  );
  border-radius: 1rem;
  border: 1px solid color-mix(in hsl, hsl(var(--primary)), transparent 80%);
}

.contact-message p {
  margin: 0;
  color: hsl(var(--foreground));
  font-size: 1.1rem;
  line-height: 1.6;
}

.linkedin-profiles {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.linkedin-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.25rem;
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--background)), transparent 10%) 0%,
    color-mix(in hsl, hsl(var(--background)), hsl(var(--primary)) 5%) 100%
  );
  border: 1px solid color-mix(in hsl, hsl(var(--border)), hsl(var(--primary)) 20%);
  border-radius: 1rem;
  text-decoration: none;
  color: hsl(var(--foreground));
  transition: all .3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.linkedin-card:hover {
  transform: translateY(-2px);
  background: linear-gradient(135deg, 
    color-mix(in hsl, hsl(var(--primary)), transparent 90%) 0%,
    color-mix(in hsl, hsl(var(--primary)), transparent 80%) 100%
  );
  box-shadow: 0 8px 24px color-mix(in hsl, hsl(var(--primary)), transparent 80%);
  border-color: color-mix(in hsl, hsl(var(--primary)), transparent 60%);
}

.linkedin-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg, transparent, color-mix(in hsl, hsl(var(--primary)), white 20%), transparent);
  opacity: 0;
  transform: translateX(-100%);
  transition: all .6s cubic-bezier(0.4, 0, 0.2, 1);
}

.linkedin-card:hover::before {
  opacity: .2;
  transform: translateX(100%);
}

.linkedin-icon {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, #0077B5 0%, #005885 100%);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
  box-shadow: 0 4px 12px rgba(0, 119, 181, 0.3);
}

.linkedin-info {
  flex: 1;
}

.linkedin-info h3 {
  margin: 0 0 0.25rem 0;
  font-size: 1.125rem;
  font-weight: 600;
  color: hsl(var(--foreground));
}

.linkedin-info p {
  margin: 0;
  font-size: 0.875rem;
  color: hsl(var(--muted-foreground));
  opacity: 0.8;
}

.contact-alternative {
  text-align: center;
  padding-top: 1rem;
  border-top: 1px solid color-mix(in hsl, hsl(var(--border)), transparent 60%);
}

.alternative-text {
  margin: 0;
  color: hsl(var(--muted-foreground));
  font-size: 0.875rem;
  opacity: 0.8;
}

/* Modal backdrop and behavior */
html:has(.contact-modal[open]) {
  overflow: hidden;
  scrollbar-gutter: stable;
}

.contact-modal[open]::backdrop {
  background: transparent;
  backdrop-filter: none;
}

@keyframes contact-scale-up {
  to {
    translate: 0 0;
    scale: 1;
  }
}

@media (prefers-reduced-motion: no-preference) {
  .contact-modal {
    translate: 0 2rem;
    scale: .85;
  }

  .contact-modal[open] {
    animation: contact-scale-up forwards 0.4s;
    animation-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1);
  }
}

/* Responsive */
@media (max-width: 640px) {
  .contact-card {
    padding: 1.5rem;
  }
  
  .contact-title {
    font-size: 1.5rem;
  }
  
  .linkedin-card {
    padding: 0.875rem 1rem;
  }
  
  .linkedin-icon {
    width: 40px;
    height: 40px;
  }
  
  .linkedin-info h3 {
    font-size: 1rem;
  }
}

</style>