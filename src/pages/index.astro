---

import Layout from "../layouts/Layout.astro"

import CaseStudiesSection from "../components/CaseStudiesSection.astro"
import FaqSection from "../components/FaqSection.astro"
import ServicesCarousel from "../components/ServicesCarousel.astro"
import HomeSection from "../components/HomeSection.astro"
import AboutUsSection from "../components/AboutUsSection.astro"

import caseStudies from "../data/case_studies.json"
import faq from "../data/faq.json"
import services from "../data/services.json"
import home from "../data/home.json"
import global_settings from "../data/global_settings.json"

---

<Layout title={ global_settings.title }>

  <HomeSection
    content={ home.homeSection_content }
    settings={ global_settings }
    title={ home.homeSection_title }
  />

  <ServicesCarousel
    services={ services }
    title={ home.services_title }
  />

  <CaseStudiesSection
    caseStudies={ caseStudies }
    title={ home.case_studies_title }
  />

  <AboutUsSection
    title={ home.about_title }
    content={ home.about_content }
    team={ home.about_team }
  />

  <FaqSection
    faq={ faq }
    title={ home.faq_title }
  />

</Layout>
