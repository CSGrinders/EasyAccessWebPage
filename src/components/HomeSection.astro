---

import Image from "astro/components/Image.astro"
import homeSection_screens from "../assets/theme-images/application-screen.png"

const { settings, title, content } = Astro.props

---

<section class="bs-container py-6 flex flex-col items-center mb-24">

  <!-- Content -->
  <div class="flex flex-col gap-6 max-w-4xl w-full py-12 text-center">

    <!-- Title -->
    <h1 class="homeSection-title" set:html={ title } />

    <!-- Content -->
    <div class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-bs-foreground-dark" set:html={ content } />

    <!-- CTA -->
    <button type="button" class="download-button" onclick="contact.showModal()">
      Want to try? Contact Us
    </button>

  </div>

  <!-- Image -->
  <figure class="homeSection-image-container">
    <Image 
      src={ homeSection_screens } 
      format="png" 
      quality="high" 
      alt="EasyAccess unified file management interface showing cloud integration" 
      loading="eager" 
      class="homeSection-image" 
    />
  </figure>

</section>

<style>

.homeSection-title {
  font-size: clamp(2.5rem, 6vw, 4rem);
  font-weight: 700;
  line-height: 1.2;
  color: hsl(var(--foreground));
  margin: 0 0 1rem 0;
}


.download-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.625rem 1.25rem;
  margin: 1.5rem auto 0 auto;
  background: hsl(var(--foreground));
  color: hsl(var(--background));
  border: none;
  border-radius: 1.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 8px color-mix(in hsl, hsl(var(--foreground)), transparent 80%);
  width: auto;
  max-width: 200px;
  min-width: auto;
  white-space: nowrap;
}

.download-button:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 16px color-mix(in hsl, hsl(var(--foreground)), transparent 70%);
}

.download-button:active {
  transform: translateY(0);
}

/* HomeSection Image Styling */
.homeSection-image-container {
  width: 100%;
  max-width: 1400px;
  margin: 2rem auto 0;
  position: relative;
}

.homeSection-image {
  width: 100%;
  height: auto;
  border-radius: 1rem;
  display: block;
}

/* Responsive */
@media (max-width: 768px) {
  .homeSection-title {
    font-size: clamp(2rem, 8vw, 2.5rem);
  }
  
  .download-button {
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    max-width: 180px;
  }
  
  .homeSection-image-container {
    margin: 2rem auto 0;
  }
  
  .homeSection-image {
    border-radius: 1.5rem;
  }
}

</style>